{% extends '/layouts/base.html.twig' %}
{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date Of Birth</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            </thead>
            <tbody>
            {% if customers|length > 0 %}
                {% for item in customers %}
                <tr>
                    <td>{{ item.firstName }}</td>
                    <td>{{ item.lastName }}</td>
                    <td>{{ item.dateOfBirth }}</td>
                    <td>
                        <a href="/customer/{{ item.id }}/products">Show products</a>
                    </td>
                    <td>{% if item.createdAt %} {{ item.createdAt|date('Y-m-d H:i:s') }} {% endif %}</td>
                    <td>{% if item.updatedAt %} {{ item.updatedAt|date('Y-m-d H:i:s') }} {% endif %}</td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Current table do not have a data <a ></td>
                </tr>
            {% endif %}
            </tbody>
            </tbody>
        </table>
    </div>
{% endblock %}

