{% extends '/layouts/base.html.twig' %}

{% block content %}
    <div class="table-responsive">
        <a href="/" class="btn btn-success"><< Back to Customers list</a>
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            </thead>
            <tbody>
            {% if products|length > 0 %}
                {% for item in products %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.status }}</td>
                        <td>{% if item.createdAt %} {{ item.createdAt|date('Y-m-d H:i:s') }} {% endif %}</td>
                        <td>{% if item.updatedAt %} {{ item.updatedAt|date('Y-m-d H:i:s') }} {% endif %}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Current table do not have a data <a ></td>
                </tr>
            {% endif %}
            </tbody>
            </tbody>
        </table>
    </div>
    <a href="/customer/{{ customer_id }}/product/create" class="btn btn-info"><strong>+</strong> Create product</a>
{% endblock %}

